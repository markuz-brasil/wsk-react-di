    script(src='react/react-with-addons.js')
    // endbuild

    // build:js scripts/zone-dev.js
    script(src='libs/zone/except-zone.js')
    script(src='libs/zone/counting-zone.js')
    script(src='libs/zone/long-stack-trace-zone.js')
    // endbuild

    //build:css styles/components/main.min.css
    link(rel='stylesheet', href='styles/h5bp.css')
    link(rel='stylesheet', href='styles/components.css')
    link(rel='stylesheet', href='styles/main.css')
    //endbuild

